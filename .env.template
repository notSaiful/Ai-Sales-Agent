# Environment Variables Template

# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# CLIENT IDENTIFICATION
# ============================================
CLIENT_ID=acme-corp
CLIENT_NAME=Acme Corporation

# ============================================
# N8N CONFIGURATION
# ============================================
N8N_WEBHOOK_URL=https://n8n.yourdomain.com/webhook
WEBHOOK_AUTH_TOKEN=generate-secure-random-token-here

# ============================================
# OPENAI API
# ============================================
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4o
# Alternative: gpt-4o-mini (faster, cheaper)

# ============================================
# ELEVENLABS VOICE API
# ============================================
ELEVENLABS_API_KEY=xi_your-key-here
ELEVENLABS_AGENT_ID=agent_your-agent-id-here

# ============================================
# WHATSAPP BUSINESS API
# ============================================
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token-here
SALES_REP_PHONE=+1234567890

# ============================================
# CRM (HUBSPOT)
# ============================================
CRM_TYPE=hubspot
HUBSPOT_API_KEY=pat-na1-your-key-here
HUBSPOT_PORTAL_ID=12345678

# Alternative: Zoho CRM
# CRM_TYPE=zoho
# ZOHO_CLIENT_ID=your-client-id
# ZOHO_CLIENT_SECRET=your-client-secret
# ZOHO_REFRESH_TOKEN=your-refresh-token

# ============================================
# GOOGLE SHEETS
# ============================================
GOOGLE_SHEETS_ID=your-spreadsheet-id-here
GOOGLE_SERVICE_ACCOUNT_EMAIL=n8n-service-account@project-id.iam.gserviceaccount.com

# ============================================
# EMAIL (OPTIONAL)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=sales@company.com
SMTP_PASS=your-app-password-here

# Alternative: SendGrid
# SENDGRID_API_KEY=SG.your-key-here
# SENDGRID_FROM_EMAIL=sales@company.com

# ============================================
# PRODUCT INFORMATION (for AI context)
# ============================================
PRODUCT_DESCRIPTION=Enterprise CRM platform for mid-sized B2B companies
PRODUCT_NAME=AcmeCRM
ICP_DESCRIPTION=Mid-sized B2B companies with 50-500 employees in tech/SaaS

# ============================================
# SALES TEAM
# ============================================
SALES_REP_NAME=Mike Johnson
SALES_REP_EMAIL=mike@company.com

# ============================================
# OPTIONAL: ADVANCED CONFIGURATION
# ============================================

# AI Qualification Thresholds
HOT_BUDGET_THRESHOLD=7
HOT_URGENCY_THRESHOLD=6
HOT_FIT_THRESHOLD=7
WARM_INDICATOR_THRESHOLD=5

# Voice Call Settings
VOICE_MAX_DURATION=180
VOICE_SILENCE_TIMEOUT=5

# Follow-up Sequence Days
HOT_FOLLOWUP_DAYS=0,1,3,7
WARM_FOLLOWUP_DAYS=0,2,5,7

# Timezone
TIMEZONE=America/New_York

# ============================================
# NOTES
# ============================================
# To generate secure random token:
# openssl rand -base64 32
#
# To get Google Sheets ID:
# Copy from URL: https://docs.google.com/spreadsheets/d/[THIS_PART]/edit
#
# To format phone numbers:
# Use E.164 format: +[country code][number]
# Example: +12345678900
